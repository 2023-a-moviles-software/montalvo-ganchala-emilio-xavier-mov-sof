<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioAutor">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.934"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.211"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23" />

    <EditText
        android:id="@+id/et_nombre"
        android:layout_width="212dp"
        android:layout_height="67dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="129dp" />

    <TextView
        android:id="@+id/tv_apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="260dp" />

    <EditText
        android:id="@+id/et_apellido"
        android:layout_width="212dp"
        android:layout_height="63dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="239dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="82dp"
        android:layout_height="48dp"
        android:text="Fecha de Nacimiento"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="357dp" />

    <EditText
        android:id="@+id/et_fecha_nacimiento"
        android:layout_width="211dp"
        android:layout_height="61dp"
        android:ems="10"
        android:inputType="date"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="344dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Género"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="472dp" />

    <EditText
        android:id="@+id/et_género"
        android:layout_width="211dp"
        android:layout_height="57dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="453dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nacionalidad"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="569dp" />

    <EditText
        android:id="@+id/et_nacionalidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="169dp"
        tools:layout_editor_absoluteY="556dp" />

    <Button
        android:id="@+id/btn_aceptar_autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="645dp" />

</androidx.constraintlayout.widget.ConstraintLayout>