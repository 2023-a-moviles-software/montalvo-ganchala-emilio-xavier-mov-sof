<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar"
        tools:layout_editor_absoluteX="209dp"
        tools:layout_editor_absoluteY="137dp" />

    <Button
        android:id="@+id/btn_eliminar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Eliminar"
        app:layout_constraintStart_toEndOf="@+id/tv_apellido_rv"
        app:layout_constraintTop_toBottomOf="@+id/btn_editar" />

    <Button
        android:id="@+id/btn_ver_libros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver libros"
        app:layout_constraintTop_toBottomOf="@+id/btn_eliminar"
        tools:layout_editor_absoluteX="209dp" />

    <TextView
        android:id="@+id/tv_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Nombre"
        app:layout_constraintEnd_toStartOf="@+id/tv_apellido_rv"
        tools:layout_editor_absoluteY="185dp" />

    <TextView
        android:id="@+id/tv_apellido_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="185dp" />

</androidx.constraintlayout.widget.ConstraintLayout>